<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.lm.piccolo.sample.MainActivity">

    <Button
        android:id="@+id/view_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="View Sample"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/list_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="ListView Sample"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/pager_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="ViewPager Sample"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/recycler_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="RecyclerView Sample"
        android:textAllCaps="false" />
</LinearLayout>